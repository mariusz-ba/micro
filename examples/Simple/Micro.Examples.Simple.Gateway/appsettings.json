{
  "App": {
    "Name": "Gateway"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "ApplicationInsights": {
      "LogLevel": {
        "Default": "Information"
      }
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "ProductStructures" : {
        "ClusterId": "Products",
        "Match": {
          "Path": "products/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "{**catch-all}" },
          { "X-Forwarded": "Set" },
          {
            "RequestHeader": "X-Forwarded-Prefix",
            "Set": "products"
          }
        ]
      },
      "ProductPricing" : {
        "ClusterId": "Notifications",
        "Match": {
          "Path": "notifications/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "{**catch-all}" },
          { "X-Forwarded": "Set" },
          {
            "RequestHeader": "X-Forwarded-Prefix",
            "Set": "notifications"
          }
        ]
      }
    },
    "Clusters": {
      "Products": {
        "Destinations": {
          "Destination1": {
            "Address": "http://localhost:5010"
          }
        }
      },
      "Notifications": {
        "Destinations": {
          "Destination1": {
            "Address": "http://localhost:5020"
          }
        }
      }
    }
  },
  "Swagger": {
    "Endpoints": [
      {
        "Url": "/products/swagger/v1/swagger.json",
        "Name": "Products v1"
      },
      {
        "Url": "/notifications/swagger/v1/swagger.json",
        "Name": "Notifications v1"
      }
    ]
  }
}
